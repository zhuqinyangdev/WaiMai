<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.waimai">

    <uses-permission android:name="android.permission.INTERNET" />

    <user-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginAndRegister.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginAndRegister.EnterMail" />
        <activity
            android:name=".MainActivities.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".LoginAndRegister.Code" />
        <activity
            android:name=".LoginAndRegister.UserInfo"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".LoginAndRegister.EditPassword" />
        <activity android:name=".Tools.SimpleCamera" />
        <activity android:name=".OtherActivity.Cooperation" />
        <activity android:name=".OtherActivity.Cooperation2" />
        <activity android:name=".Tools.SelectImageFromGallery"></activity>
        <activity android:name=".Tools.SimpleCameraForAll"></activity>
    </application>

</manifest>